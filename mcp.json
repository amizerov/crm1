{
  "mcpServers": {
    "crm1": {
      "command": "node",
      "args": [
        "--loader",
        "tsx",
        "src/mcp/server.ts"
      ],
      "env": {
        "DB_USER": "${DB_USER}",
        "DB_PASSWORD": "${DB_PASSWORD}",
        "DB_SERVER": "${DB_SERVER}",
        "DB_NAME": "${DB_NAME}",
        "DB_PORT": "${DB_PORT:-1433}"
      }
    }
  }
}
